<h3>Registered Servers</h3>

<div class="row">

<hr />
<div class="row">
  <div class="span4">
    <table>
      <thead>
        <tr>
          <th>Hostname</th>
          <th>Address</th>
          <th>FQDN</th>
          <th>Hostgroup</th>
          <th>Hostgroup desc</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <form action="/nagiosql/c/host" method="POST" class="form-horizontal">
            <fieldset>
              <div class="control-group">
                <input type="hidden" name="_method" value="POST" />
                <input type="hidden" name="insertmode" value="manual" />
                <td><input class="input-medium" type="text" name="hostname"></td>
                <td><input class="input-medium" type="text" name="address"></td>
                <td><input class="input-large" type="text" name="fqdn"></td>
                <td><input class="input-small" type="text" name="hostgroup"></td>
                <td><input class="input-medium" type="text" name="hostgroupdesc"></td>
                <td><input class="input-small" type="text" name="status"></td>
                <td><button type="submit" class="btn btn-small btn-info">Save</button></td>
              </div>
            </fieldset>
          </form>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<br />

<br />
<div class="row">
  <div class="span12">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <!-- <th>ID</th> -->
          <th>Date</th>
          <th>Hostname</th>
          <th>Address</th>
          <th>FQDN</th>
          <th>Hostgroup</th>
          <th>Hostgroup desc</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @h.each do |host| %>
          <tr>
            <!-- <td><%= host.id %></td> -->
            <td><%= host.created_at.strftime("%m/%d/%Y") %></td>
            <td><%= host.hostname %></td>
            <td><%= host.address %></td>
            <td><%= host.fqdn %></td>
            <td><%= host.hostgroup %></td>
            <td><%= host.hostgroupdesc %></td>
            <td><%= host.status %></td>
            <td></td>
            <form action="/nagiosql/d/host/<%= host.id %>" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <td><a class="btn btn-small" href="/nagiosql/e/host/<%= host.id %>">Edit</a></td>
              <td><button type="submit" value="Delete" class="btn btn-small btn-danger">Delete</button></td>
            </form>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
